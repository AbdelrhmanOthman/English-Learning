<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackgorund"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abdelrhman.abdo.learn_english.ECONOMY"
    tools:showIn="@layout/app_bar_economy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="مجموع الكلمات"
            android:textColor="@color/colorbackgorundButton" />

        <TextView
            android:id="@+id/txtcount"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="522"
            android:textColor="@color/colorbackgorundButton" />

        <TextView
            android:id="@+id/txtnumberEconomy"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorTextView" />

        <Button
            android:onClick="btn_listEconomy"
            android:id="@+id/btn_list_economy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_menu_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEconomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:textStyle="bold"

            android:textColor="@color/colorTextView"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/txtArabic_Economy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:textStyle="bold"

            android:textColor="@color/colorTextView"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/editText_economyWords"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:hint="اكتب مثالا هنا"
            android:inputType="textMultiLine" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/colorbackgorundButton"
            android:onClick="btn_addExampel"
            android:text="حفظ"
            android:textColor="@color/colorTextButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorbackgorundButton"
            android:onClick="btn_nextEconomy"
            android:text="التالى"
            android:textColor="@color/colorTextButton" />

        <Button
            android:id="@+id/btn_favourt"
            style="@android:style/Widget.Holo.CompoundButton.Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/ic_grade_black_24dp"
            android:onClick="btn_FavourtEconomy"
            android:textColor="@color/colorTextButton" />

        <Button
            android:id="@+id/btn_speak"
            style="@android:style/Widget.Holo.CompoundButton.Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_btn_speak_now"
            android:onClick="btn_speakEconomy"
            android:textColor="@color/colorTextButton" />

        <Button
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/btn_next"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorbackgorundButton"
            android:onClick="btn_backEconomy"
            android:text="السابق"
            android:textColor="@color/colorTextButton" />
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2638567379077144/1533002045">
    </com.google.android.gms.ads.AdView>



</LinearLayout>
